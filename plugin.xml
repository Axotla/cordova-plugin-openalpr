<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-openalpr" version="0.0.1" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>OpenALPR</name>

    <js-module name="OpenALPR" src="www/OpenALPR.js">
        <clobbers target="cordova.plugins.OpenALPR" />
    </js-module>

    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="OpenALPR">
                <param name="ios-package" value="OpenALPR" />
            </feature>
        </config-file>

        <!--<header-file src="src/ios/OpenALPR-Bridging-Header.h"/>-->
        <!--<source-file src="src/ios/OpenALPR.swift" />-->

        <framework src="src/ios/lib/leptonica.framework" />
        <framework src="src/ios/lib/openalpr.framework" />
        <framework src="src/ios/lib/opencv2.framework" />
        <framework src="src/ios/lib/tesseract.framework" />

        <dependency id="cordova-plugin-add-swift-support" version="1.3.2"/>
    </platform>
</plugin>
